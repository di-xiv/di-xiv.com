---
interface Props {
  line1: string;
  line2: string;
  line3: string;
}

const { line1, line2, line3 } = Astro.props as Props;
---

<div class="flex justify-center mb-[1%]">
  <div
    id="machine-translation-notice"
    class="border-2 border-solid rounded-lg border-red-700 mb-[5%] mt-[2%] flex p-2 w-[50%] mobile-only:w-[90%]"
  >
    <div
      id="machine-translation-notice-container"
      class="grid grid-cols-1 gap-3"
    >
      <span class="regular">
        ⚠️ {line1}
      </span>
      <span class="ultralight">
        {line2}
      </span>
      <span class="ultralight">
        {line3}
      </span>
    </div>
  </div>
</div>
