---
interface Props {
  title: string;
  localizedClicktoCopy: string;
  copyButtonID: string;
  copyTargetID: string;
  link: string;
  linkTarget?: string;
}

const {
  title,
  localizedClicktoCopy,
  copyTargetID,
  copyButtonID,
  link,
  linkTarget,
} = Astro.props as Props;
---

<div class="flex items-center justify-between glassbox p-2 rounded-md">
  <a
    href={link}
    target={linkTarget}
    id={copyTargetID}
    class="select-none hover:cursor-pointer flex items-center"
    title={title}
  >
    <div class="glassbox p-2 rounded-sm ml-1">
      <slot name="inline-svg" />
    </div>
    <h2
      class="regular text-3xl mobile-only:text-xl ml-3 hover:underline inline-block"
    >
      {title}
    </h2>
  </a>
  <a
    id={copyButtonID}
    role="button"
    aria-label=`Link to copy the ${title} link to clipboard`
    title=`${localizedClicktoCopy}: ${title}`
    tabindex="0"
    data-astro-prefetch="load"
    class="hover:cursor-pointer button-glassbox p-2 rounded-sm"
  >
    <div class="dark:invert">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 mobile-only:h-4 w-auto dark:invert"
        viewBox="0 0 48 48"
        ><g fill="none" stroke="currentColor" stroke-width="4"
          ><path
            d="M12 9.927V7a3 3 0 0 1 3-3h26a3 3 0 0 1 3 3v26a3 3 0 0 1-3 3h-2.983"
          ></path><rect
            width="34"
            height="34"
            x="4"
            y="10"
            stroke-linejoin="round"
            rx="3"></rect><path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m18.44 23.11l5.292-5.51c1.451-1.451 3.837-1.42 5.328.072s1.523 3.877.072 5.328l-1.91 2.023m-13.756 3.724c-.51.51-1.565 1.53-1.565 1.53c-1.452 1.451-1.492 4.038 0 5.53c1.49 1.49 3.876 1.523 5.328.071l5.164-4.688"
          ></path><path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M18.663 28.328a3.86 3.86 0 0 1-1.131-2.473A3.67 3.67 0 0 1 18.592 23m3.729 2.861c1.491 1.491 1.523 3.877.072 5.329"
          ></path></g
        ></svg
      >
    </div>
  </a>
</div>
