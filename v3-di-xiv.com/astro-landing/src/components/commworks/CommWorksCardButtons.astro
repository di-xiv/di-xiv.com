  <div class="grid grid-cols-2 gap-3 select-none">
    <a
      data-astro-prefetch="hover"
      id="rating-directlink"
      href={getLocalizedPath("ratings")}
    >
      <div class="flex items-center button-glassbox p-2 rounded-md">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-11 mobile-only:h-6 w-auto mr-1"
          viewBox="0 0 48 48"
        >
          <circle
