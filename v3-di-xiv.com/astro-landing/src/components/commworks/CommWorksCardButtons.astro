            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"></circle><path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.28 29.38a4.35 4.35 0 0 0 3.88 1.76h.36a4.75 4.75 0 0 0 4.76-4.76v-4.76"
          ></path><circle
            cx="30.48"
            cy="21.62"
