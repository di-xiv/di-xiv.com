---
interface Props {
  localizedPerRating: string;
  localizedPerTags: string;
  localizedRoute: string;
}

const { localizedPerRating, localizedPerTags, localizedRoute } =
  Astro.props as Props;

function getLocalizedPath(page: string) {
  if (localizedRoute) {
    return `/${localizedRoute}/commissioned-works?page=${page}`;
  } else {
    return `/commissioned-works?page=${page}`;
  }
}
---

