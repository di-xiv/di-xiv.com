---
import { Image } from "astro:assets";
import CopyButton from "@/app/contact/contact-buttons/CopyButton.astro";
import LinkButton from "@/app/contact/contact-buttons/LinkButton.astro";
interface Props {
  localizedClickToCopy: string;
  localizedLinkTo: string;
}

const { localizedClickToCopy, localizedLinkTo } = Astro.props;
---

<div class="flex justify-center mt-[2%]">
  <div class="grid grid-cols-3 mobile-only:grid-cols-2 gap-2">
    <CopyButton
      copyButtonContent="di_xiv"
      copyButtonID="discord-button"
      copyButtonText="Discord"
      copyButtonToastID="discord-toast"
      localizedTitleCopy={localizedClickToCopy}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/discord-icon-svgrepo-com.svg"
        class="mobile-only:h-6 h-12 mr-1"
        alt="Discord icon"
        width={48}
        height={48}
      />
    </CopyButton>
    <LinkButton
      linkButtonHref="mailto:hello@di-xiv.com"
      linkButtonID="email-button"
      linkButtonText="Email"
      localizedTitleLink={localizedLinkTo}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/mdi--email-outline.svg"
        class="mobile-only:h-6 h-12 mr-1 dark:invert"
        alt="Email icon"
        width={48}
        height={48}
      />
    </LinkButton>
    <LinkButton
      linkButtonHref="https://x.com/xiv_di"
      linkButtonID="twitter-button"
      linkButtonText="Twitter"
      localizedTitleLink={localizedLinkTo}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/twitter-color-svgrepo-com.svg"
        class="mobile-only:h-6 h-12 mr-1"
        alt="Twitter birb"
        width={48}
        height={48}
      />
    </LinkButton>
    <LinkButton
      linkButtonHref="https://tellonym.me/di_xiv"
      linkButtonID="tellonym-button"
      linkButtonText="Tellonym"
      localizedTitleLink={localizedLinkTo}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/icons8-tellonym.svg"
        class="mobile-only:h-6 h-12 mr-1"
        alt="Tellonym"
        width={48}
        height={48}
      />
    </LinkButton>
    <LinkButton
      linkButtonHref="https://bsky.app/profile/di-xiv.com"
      linkButtonID="bsky-button"
      linkButtonText="Bluesky"
      localizedTitleLink={localizedLinkTo}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/logos--bluesky.svg"
        class="mobile-only:h-6 h-12 mr-1"
        alt="Bluesky"
        width={48}
        height={48}
      />
    </LinkButton>
    <LinkButton
      linkButtonHref="https://dill.burggit.moe/@di_xiv"
      linkButtonID="misskey-button"
      linkButtonText="Burggit.moe"
      localizedTitleLink={localizedLinkTo}
    >
      <Image
        loading="eager"
        src="/icons/content/contact/arcticons--misskey.svg"
        class="mobile-only:h-6 h-12 mr-1"
        alt="Mastodon icon"
        width={48}
        height={48}
      />
    </LinkButton>
  </div>
</div>
