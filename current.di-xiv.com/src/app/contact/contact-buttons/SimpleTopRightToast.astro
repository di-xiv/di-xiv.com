---
interface Props {
  localizedToast: string;
  toastID: string;
}

const { localizedToast, toastID } = Astro.props;
---

<div
  id={toastID}
  class="hidden select-none w-auto rounded-lg p-3 mobile-only:p-1 toast-glassbox toast z-20 whitespace-nowrap toast"
>
  <div class="flex items-center">
    <div class="inline-block glassbox p-2 rounded-md mobile-only:p-1">
      <slot />
    </div>
    <p
      class="regular text-lg mobile-only:text-sm inline-block text-wrap ml-2 mobile-only:mr-2"
    >
      {localizedToast}
    </p>
  </div>
</div>
