---
interface Props {
  locale: "en" | "ja" | "pt" | "es";
}

const { locale } = Astro.props;

const localizedLabels = {
  en: "Close navigation menu",
  es: "Cerrar menú de navegación",
  ja: "ナビゲーションメニューを閉じる",
  pt: "Fechar menu de navegação",
};

const buttonLabel = localizedLabels[locale] || localizedLabels.en;
---

<button
  id="drawer-close-button"
  class="absolute top-[1%] right-[5%] button-glassbox rounded-full p-3
  transition-all duration-300 ease-in-out
  border-2 border-solid border-[#181a1b] dark:border-[#efefef]"
  aria-label={buttonLabel}
  title={buttonLabel}
>
  <div class="dark:invert">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-5 h-auto dark:invert"
      viewBox="0 0 16 16"
      aria-hidden="true"
    >
      <path
        fill="currentColor"
        d="M15.854 12.854L11 8l4.854-4.854a.503.503 0 0 0 0-.707L13.561.146a.5.5 0 0 0-.707 0L8 5L3.146.146a.5.5 0 0 0-.707 0L.146 2.439a.5.5 0 0 0 0 .707L5 8L.146 12.854a.5.5 0 0 0 0 .707l2.293 2.293a.5.5 0 0 0 .707 0L8 11l4.854 4.854a.5.5 0 0 0 .707 0l2.293-2.293a.5.5 0 0 0 0-.707"
      ></path>
    </svg>
  </div>
</button>
