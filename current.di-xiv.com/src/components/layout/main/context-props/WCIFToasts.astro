---
import CopyStringToast from "@/app/charrefs/wcif/CopyStringToast.astro";
import { Image } from "astro:assets";
interface Props {
  locale: "en" | "ja" | "pt" | "es";
}

const { locale } = Astro.props;
const localizedCopiedCustomizeString = {
  en: "Customize+ String copied to clipboard",
  ja: "Customize+ クリップボードにコピーされた文字列",
  es: "String de Customize+ copiado al portapapeles",
  pt: "Customize+ String copiado para a área de transferência",
};
const localizedCopiedGlamourerString = {
  en: "Glamourer String copied to clipboard",
  ja: "Glamourer 文字列がクリップボードにコピーされました",
  es: "String de Glamourer copiado al portapapeles",
  pt: "Glamourer String copiado para a área de transferência",
};
---

<div
  id="toasts-container"
  class="fixed top-[5%] right-[5%] z-20 grid grid-cols-1 gap-2"
>
  <CopyStringToast
    localizedToast={localizedCopiedCustomizeString[locale]}
    toastID="customize-toast"
    stringToCopy=""
    triggerButtonID="customize-string"
  >
    <div>
      <Image
        loading="eager"
        width={44}
        height={44}
        src="/icons/content/wcif/customize-svgrepo-com.svg"
        class="h-11 mobile-only:h-6 w-auto mr-1"
        alt={`${localizedCopiedCustomizeString} icon`}
      />
    </div>
  </CopyStringToast>
  <CopyStringToast
    localizedToast={localizedCopiedGlamourerString[locale]}
    toastID="glamourer-toast"
    stringToCopy=""
    triggerButtonID="glamourer-string"
  >
    <Image
      loading="eager"
      width={44}
      height={44}
      src="/icons/content/wcif/elegante-makeup-svgrepo-com.svg"
      class="h-11 mobile-only:h-6 w-auto mr-1"
      alt={`${localizedCopiedGlamourerString}icon`}
    />
  </CopyStringToast>
</div>
